<!DOCTYPE html>
<html lang="fr">
<head>
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
      background-color: #f4f7ff; /* Fond doux et lumineux */
      color: #333;
      padding: 40px 20px;
      line-height: 1.6;
      margin: 0;
      display: flex;
      justify-content: center;
    }

    .container {
      max-width: 1000px;
      width: 100%;
    }

    h3 {
      font-size: 2.2rem;
      font-weight: 700;
      color: #5d5fef; /* Un violet-bleu distinctif */
      text-align: center;
      margin-bottom: 50px;
    }

    .deck-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); /* 3 cartes par ligne sur desktop, s'adapte */
      gap: 30px; /* Espace entre les cartes */
    }

    .deck-card {
      background-color: #ffffff;
      border-radius: 12px;
      padding: 25px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08); /* Ombre douce et élégante */
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      min-height: 180px; /* Hauteur minimale pour l'homogénéité */
    }

    .deck-card:hover {
      transform: translateY(-8px); /* Petit effet de soulèvement au survol */
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12); /* Ombre plus prononcée au survol */
    }

    .deck-card h4 {
      font-size: 1.3rem;
      color: #5d5fef; /* Titre de la carte en couleur accent */
      margin-top: 0;
      margin-bottom: 10px;
      line-height: 1.3;
    }

    .deck-card p {
      font-size: 0.95rem;
      color: #6a6e78;
      margin-bottom: 20px;
      flex-grow: 1; /* Permet à la description de prendre de la place */
    }

    .deck-card .cta-button {
      display: inline-block;
      background-color: #5d5fef;
      color: white;
      padding: 10px 18px;
      border-radius: 8px;
      text-decoration: none;
      font-weight: 600;
      font-size: 0.9rem;
      align-self: flex-start; /* Aligner le bouton à gauche */
      transition: background-color 0.3s ease;
    }

    .cta-button:hover {
      background-color: #4a4cdb; /* Assombrir légèrement au survol */
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
      .deck-grid {
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); /* 2 cartes par ligne sur tablette */
      }
      h3 {
        font-size: 1.8rem;
        margin-bottom: 30px;
      }
    }

    @media (max-width: 480px) {
      .deck-grid {
        grid-template-columns: 1fr; /* 1 carte par ligne sur mobile */
      }
      .deck-card {
        padding: 20px;
      }
      h3 {
        font-size: 1.6rem;
        margin-bottom: 20px;
      }
    }
  </style>
</head>

<body>
    <div class="container">
        <h3>Explorer les Decks de Flashcards</h3>
        <div class="deck-grid">
            @each(deck in decks)
              <div class="deck-card">
                <div>
                  <h4>{{ deck.title }}</h4>
                  <p>{{ deck.description }}</p>
                </div>
                <a href="/decks/{{ deck.id }}" class="cta-button">Étudier le Deck</a>
              </div>
            @end
        </div>
    </div>
</body>
</html>
