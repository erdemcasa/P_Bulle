@layout({ title: 'Accueil' })
<div class="user-bar">
  <p>Connecté en tant que <strong>{{ auth.user.username }}</strong></p>
</div>

<hr />

<h3>Decks publiés</h3>

<div class="deck-grid">
  @each(deck in decks)
  <div class="deck-card">
    <h4>{{ deck.title }}</h4>
    <p>{{ deck.description }}</p>
    <p><strong>{{ deck.nbCards }}</strong> cartes</p>
    <a href="{{ route('decks.show', { id: deck.id }) }}">Voir le deck</a>
  </div>
  @else
  <p>Aucun deck disponible.</p>
  @end
</div>
@end